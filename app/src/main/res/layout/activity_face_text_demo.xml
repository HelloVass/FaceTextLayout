<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <la.juju.android.ftil.widgets.FaceTextInputLayout
    android:id="@+id/tv_face_text_input_layout"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    android:visibility="gone"
    app:selectedSrc="@mipmap/indicator_select"
    app:unselectedSrc="@mipmap/indicator_unselect" />


  <android.support.v7.widget.SwitchCompat
    android:id="@+id/sw_trigger"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_below="@+id/tv_face_text_input_layout"
    android:layout_marginRight="4dp"
    android:layout_marginTop="4dp" />


</RelativeLayout>