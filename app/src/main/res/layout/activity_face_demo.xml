<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:indicator_space="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <la.juju.android.yanwenzilayout.widgets.DotViewLayout
    android:id="@+id/dotview_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="@android:color/holo_blue_light"
    indicator_space:indicator_selected_src="@mipmap/circle_indicator_solid"
    indicator_space:indicator_unselected_src="@mipmap/circle_indicator_stroke" />


  <android.support.v4.view.ViewPager
    android:id="@+id/pager"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_above="@id/dotview_layout" />


</RelativeLayout>